@page "{id:int}"
@model AsyncAcademy.Pages.WelcomeModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="row">
    <div class="col-md-8">
        <div class="text-center">
            <h1 class="display-4">@ViewData["WelcomeText"]</h1>
        </div>

        @for (int i = 0; i < Model.EnrolledCourses.Count; i++)
        {
            var e = Model.EnrolledCourses[i];
            var s = Model.EnrolledSections[i];
            
            <div class="class-cards">
                <h1>@e.DepartmentId @e.CourseNumber.ToString()</h1>
                <br>
                @e.CourseTitle
                <br>
                @s.MeetingTimeInfo
                <br>
                @s.Location
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="todo-list">
            <h2>To-Do List</h2>
            <div class="card todo-card">
                <div class="card-body">
                    <p>CS 3750</p>
                    <p>Assignment 1</p>
                    <p>September 16, 2024 11:59 p.m.</p>
                </div>
            </div>
            <div class="card todo-card">
                <div class="card-body">
                    <p>CS 3750</p>
                    <p>Assignment 2</p>
                    <p>September 17, 2024 11:59 p.m.</p>
                </div>
            </div>
            <div class="card todo-card">
                <div class="card-body">
                    <p>CS 3750</p>
                    <p>Assignment 3</p>
                    <p>September 18, 2024 11:59 p.m.</p>
                </div>
            </div>
            <div class="card todo-card">
                <div class="card-body">
                    <p>CS 3750</p>
                    <p>Assignment 4</p>
                    <p>September 19, 2024 11:59 p.m.</p>
                </div>
            </div>
            <div class="card todo-card">
                <div class="card-body">
                    <p>CS 3750</p>
                    <p>Assignment 5</p>
                    <p>September 20, 2024 11:59 p.m.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .todo-list {
        margin-top: 20px;
    }

    .todo-card {
        margin-bottom: 10px;
        padding: 10px;
        border: solid 1px #ddd;
        border-radius: 5px;
    }

    div.class-cards {
        border: solid 3px #ddd;
        border-radius: 5px;
        margin-bottom: 10px;
        padding: 10px;
    }
</style>
